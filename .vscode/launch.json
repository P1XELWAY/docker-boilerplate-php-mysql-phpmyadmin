    "version": "0.2.0",
    "configurations": [
        {
            //"debugServer": 4711, // Uncomment for debugging the adapter
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log": true,
            "pathMappings": {
                "/var": "${workspaceFolder}",
                "/var/www": "${workspaceFolder}/www",
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}